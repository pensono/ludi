    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug ANTLR4 grammar",
            "type": "antlr-debug",
            "request": "launch",
            "input": "games/number-guessing.ludi",
            "grammar": "src/lib/lang/Ludi.g4",
            // "actionFile": "grammars/exampleActions.js",
            "startRule": "game",
            "printParseTree": true,
            "visualParseTree": true
        },
        {
            "name": "Extension",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/vscode-extension"
            ]
        }
    ]
}